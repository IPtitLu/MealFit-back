{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/logs",
  ]
}